@{
    ViewData["Title"] = "My Profile - ResQPaw";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/UserProfile.css" asp-append-version="true" />
}

<!-- Background Elements -->
<div class="fixed inset-0 overflow-hidden pointer-events-none z-0">
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-amber-200 rounded-full opacity-20 blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/3 right-1/4 w-96 h-96 bg-orange-100 rounded-full opacity-30 blur-3xl animate-pulse delay-1000"></div>
    <div class="absolute top-1/2 right-1/3 w-48 h-48 bg-yellow-100 rounded-full opacity-25 blur-2xl animate-pulse delay-500"></div>
</div>

<!-- Profile Section -->
<section class="profile-section relative z-10 py-12">
    <div class="container mx-auto px-4 max-w-7xl">
        <!-- Profile Header -->
        <div class="profile-header bg-white/90 backdrop-blur-lg rounded-2xl shadow-2xl p-8 mb-8 border border-amber-200/50 hover-lift transition-all duration-500">
            <div class="flex flex-col lg:flex-row items-center lg:items-start space-y-6 lg:space-y-0 lg:space-x-8">
                <!-- Profile Avatar -->
                <div class="relative group">
                    <div class="profile-avatar w-32 h-32 lg:w-40 lg:h-40 rounded-full overflow-hidden border-4 border-amber-500 shadow-2xl transform group-hover:scale-105 transition-transform duration-300">
                        <img src="https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
                             alt="Shuhurat Fariha" 
                             class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500">
                    </div>
                    <div class="absolute inset-0 rounded-full border-4 border-transparent bg-gradient-to-r from-amber-400 to-orange-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-10"></div>
                    <button class="absolute bottom-2 right-2 w-10 h-10 bg-amber-600 rounded-full flex items-center justify-center text-white shadow-lg transform hover:scale-110 transition-all duration-300 hover-lift">
                        <i class="fas fa-camera text-sm"></i>
                    </button>
                </div>

                <!-- Profile Info -->
                <div class="profile-info text-center lg:text-left flex-1">
                    <h2 class="text-3xl lg:text-4xl font-bold text-gray-800 mb-2 bg-gradient-to-r from-amber-600 to-orange-600 bg-clip-text text-transparent">
                        Shuhurat Fariha
                    </h2>
                    <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-6 space-y-2 sm:space-y-0 text-gray-600 mb-4">
                        <p class="flex items-center justify-center lg:justify-start space-x-2">
                            <i class="fas fa-map-marker-alt text-amber-500"></i>
                            <span>Dhaka, Bangladesh</span>
                        </p>
                        <p class="flex items-center justify-center lg:justify-start space-x-2">
                            <i class="fas fa-calendar-alt text-amber-500"></i>
                            <span>Member since: January 2020</span>
                        </p>
                    </div>
                    
                    <!-- Profile Stats -->
                    <div class="profile-stats flex justify-center lg:justify-start space-x-8 mt-6">
                        <div class="stat-item text-center group cursor-pointer">
                            <div class="stat-value text-2xl font-bold text-amber-600 group-hover:text-amber-700 transition-colors duration-300">12</div>
                            <div class="stat-label text-gray-600 text-sm group-hover:text-gray-700 transition-colors duration-300">Posts</div>
                        </div>
                        <div class="stat-item text-center group cursor-pointer">
                            <div class="stat-value text-2xl font-bold text-amber-600 group-hover:text-amber-700 transition-colors duration-300">3</div>
                            <div class="stat-label text-gray-600 text-sm group-hover:text-gray-700 transition-colors duration-300">Pets Adopted</div>
                        </div>
                        <div class="stat-item text-center group cursor-pointer">
                            <div class="stat-value text-2xl font-bold text-amber-600 group-hover:text-amber-700 transition-colors duration-300">28</div>
                            <div class="stat-label text-gray-600 text-sm group-hover:text-gray-700 transition-colors duration-300">Helped</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Profile Content -->
        <div class="profile-content grid grid-cols-1 lg:grid-cols-4 gap-8">
            <!-- Sidebar -->
            <div class="profile-sidebar lg:col-span-1">
                <div class="bg-white/90 backdrop-blur-lg rounded-2xl shadow-2xl p-6 border border-amber-200/50 hover-lift transition-all duration-500">
                    <ul class="sidebar-menu space-y-2">
                        <li>
                            <a href="#" class="sidebar-link active" data-tab="profile-info">
                                <div class="flex items-center space-x-3 p-3 rounded-xl bg-gradient-to-r from-amber-500 to-amber-600 text-white shadow-lg transform hover:scale-105 transition-all duration-300">
                                    <i class="fas fa-user w-5 text-center"></i>
                                    <span>Profile Information</span>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="sidebar-link" data-tab="my-posts">
                                <div class="flex items-center space-x-3 p-3 rounded-xl hover:bg-amber-50 text-gray-700 hover:text-amber-600 transition-all duration-300 group">
                                    <i class="fas fa-paw w-5 text-center group-hover:text-amber-600"></i>
                                    <span>My Posts</span>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="sidebar-link" data-tab="saved-pets">
                                <div class="flex items-center space-x-3 p-3 rounded-xl hover:bg-amber-50 text-gray-700 hover:text-amber-600 transition-all duration-300 group">
                                    <i class="fas fa-heart w-5 text-center group-hover:text-amber-600"></i>
                                    <span>Saved Pets</span>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="sidebar-link" data-tab="account-settings">
                                <div class="flex items-center space-x-3 p-3 rounded-xl hover:bg-amber-50 text-gray-700 hover:text-amber-600 transition-all duration-300 group">
                                    <i class="fas fa-cog w-5 text-center group-hover:text-amber-600"></i>
                                    <span>Account Settings</span>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="sidebar-link" data-tab="privacy">
                                <div class="flex items-center space-x-3 p-3 rounded-xl hover:bg-amber-50 text-gray-700 hover:text-amber-600 transition-all duration-300 group">
                                    <i class="fas fa-shield-alt w-5 text-center group-hover:text-amber-600"></i>
                                    <span>Privacy & Security</span>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <div class="profile-main lg:col-span-3">
                <!-- Profile Info Tab -->
                <div class="tab-content active" id="profile-info">
                    <div class="bg-white/90 backdrop-blur-lg rounded-2xl shadow-2xl p-8 border border-amber-200/50 hover-lift transition-all duration-500">
                        <div class="tab-header mb-8 pb-6 border-b border-amber-200/50">
                            <h3 class="text-2xl font-bold text-gray-800">Profile Information</h3>
                            <p class="text-gray-600 mt-2">Update your personal information and contact details</p>
                        </div>
                        <form id="profileForm" class="space-y-6">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div class="form-group">
                                    <label for="firstName" class="block text-gray-700 font-semibold mb-3">First Name</label>
                                    <input type="text" id="firstName" 
                                           class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-amber-500 focus:ring-2 focus:ring-amber-200 transition-all duration-300 bg-gray-50 hover:bg-white input-focus-effect shadow-sm"
                                           value="Shuhurat">
                                </div>
                                <div class="form-group">
                                    <label for="lastName" class="block text-gray-700 font-semibold mb-3">Last Name</label>
                                    <input type="text" id="lastName" 
                                           class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-amber-500 focus:ring-2 focus:ring-amber-200 transition-all duration-300 bg-gray-50 hover:bg-white input-focus-effect shadow-sm"
                                           value="Fariha">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="block text-gray-700 font-semibold mb-3">Email Address</label>
                                <input type="email" id="email" 
                                       class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-amber-500 focus:ring-2 focus:ring-amber-200 transition-all duration-300 bg-gray-50 hover:bg-white input-focus-effect shadow-sm"
                                       value="shuhuratfariha@gmail.com">
                            </div>
                            <div class="form-group">
                                <label for="phone" class="block text-gray-700 font-semibold mb-3">Phone Number</label>
                                <input type="tel" id="phone" 
                                       class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-amber-500 focus:ring-2 focus:ring-amber-200 transition-all duration-300 bg-gray-50 hover:bg-white input-focus-effect shadow-sm"
                                       value="01527372637">
                            </div>
                            <button type="submit" 
                                    class="w-full md:w-auto px-8 py-3 bg-gradient-to-r from-amber-500 to-amber-600 hover:from-amber-600 hover:to-amber-700 text-white font-bold rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg btn-glow">
                                Save Changes
                            </button>
                        </form>
                    </div>
                </div>

                <!-- My Posts Tab -->
                <div class="tab-content" id="my-posts">
                    <div class="bg-white/90 backdrop-blur-lg rounded-2xl shadow-2xl p-8 border border-amber-200/50 hover-lift transition-all duration-500">
                        <div class="tab-header mb-8 pb-6 border-b border-amber-200/50">
                            <h3 class="text-2xl font-bold text-gray-800">My Posts</h3>
                            <p class="text-gray-600 mt-2">Your recent posts and activities</p>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <!-- Post cards will be loaded here -->
                        </div>
                    </div>
                </div>

                <!-- Saved Pets Tab -->
                <div class="tab-content" id="saved-pets">
                    <div class="bg-white/90 backdrop-blur-lg rounded-2xl shadow-2xl p-8 border border-amber-200/50 hover-lift transition-all duration-500">
                        <div class="tab-header mb-8 pb-6 border-b border-amber-200/50">
                            <h3 class="text-2xl font-bold text-gray-800">Saved Pets</h3>
                            <p class="text-gray-600 mt-2">Pets you've shown interest in</p>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Saved pets will be loaded here -->
                        </div>
                    </div>
                </div>

                <!-- Account Settings Tab -->
                <div class="tab-content" id="account-settings">
                    <div class="bg-white/90 backdrop-blur-lg rounded-2xl shadow-2xl p-8 border border-amber-200/50 hover-lift transition-all duration-500">
                        <div class="tab-header mb-8 pb-6 border-b border-amber-200/50">
                            <h3 class="text-2xl font-bold text-gray-800">Account Settings</h3>
                        </div>
                        <form id="settingsForm" class="space-y-6">
                            <div class="form-group">
                                <label for="username" class="block text-gray-700 font-semibold mb-3">Username</label>
                                <input type="text" id="username" 
                                       class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-amber-500 focus:ring-2 focus:ring-amber-200 transition-all duration-300 bg-gray-50 hover:bg-white input-focus-effect shadow-sm"
                                       value="sarah_j">
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div class="form-group">
                                    <label for="newPassword" class="block text-gray-700 font-semibold mb-3">New Password</label>
                                    <input type="password" id="newPassword" 
                                           class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-amber-500 focus:ring-2 focus:ring-amber-200 transition-all duration-300 bg-gray-50 hover:bg-white input-focus-effect shadow-sm"
                                           placeholder="Enter new password">
                                </div>
                                <div class="form-group">
                                    <label for="confirmPassword" class="block text-gray-700 font-semibold mb-3">Confirm Password</label>
                                    <input type="password" id="confirmPassword" 
                                           class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-amber-500 focus:ring-2 focus:ring-amber-200 transition-all duration-300 bg-gray-50 hover:bg-white input-focus-effect shadow-sm"
                                           placeholder="Confirm new password">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="notifications" class="block text-gray-700 font-semibold mb-3">Email Notifications</label>
                                <select id="notifications" 
                                        class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-amber-500 focus:ring-2 focus:ring-amber-200 transition-all duration-300 bg-gray-50 hover:bg-white input-focus-effect shadow-sm">
                                    <option selected>All notifications</option>
                                    <option>Only important</option>
                                    <option>Disabled</option>
                                </select>
                            </div>
                            <button type="submit" 
                                    class="w-full md:w-auto px-8 py-3 bg-gradient-to-r from-amber-500 to-amber-600 hover:from-amber-600 hover:to-amber-700 text-white font-bold rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg btn-glow">
                                Update Settings
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Privacy & Security Tab -->
                <div class="tab-content" id="privacy">
                    <div class="bg-white/90 backdrop-blur-lg rounded-2xl shadow-2xl p-8 border border-amber-200/50 hover-lift transition-all duration-500">
                        <div class="tab-header mb-8 pb-6 border-b border-amber-200/50">
                            <h3 class="text-2xl font-bold text-gray-800">Privacy & Security</h3>
                        </div>
                        <div class="space-y-6">
                            <!-- Privacy settings content will be loaded here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/UserProfile.js" asp-append-version="true"></script>
}