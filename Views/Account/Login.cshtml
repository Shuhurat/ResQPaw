@{
    ViewData["Title"] = "Login - ResQPaw";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
}

<!-- Auth Container with Original Background -->
<div class="auth-background flex-grow flex justify-center items-center py-12 px-4">
    <div class="relative w-full max-w-md">
        <!-- Background decoration -->
        <div class="absolute -top-10 -left-10 w-20 h-20 bg-amber-200 rounded-full opacity-50 floating-element"></div>
        <div class="absolute -bottom-8 -right-8 w-16 h-16 bg-orange-200 rounded-full opacity-50 floating-element-2"></div>
        
        <!-- Login Box -->
        <div class="gradient-border rounded-2xl shadow-2xl overflow-hidden hover-lift transition-all duration-500" id="loginBox">
            <div class="bg-gradient-to-r from-amber-500 to-red-600 h-2 w-full"></div>
            
            <div class="p-8 bg-white">
                <div class="text-center mb-8">
                    <div class="w-16 h-16 bg-amber-500 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
                        <i class="fas fa-user text-white text-2xl"></i>
                    </div>
                    <h2 class="text-3xl font-bold text-gray-800 mb-2">Welcome Back!</h2>
                    <p class="text-gray-600">Sign in to your ResQPaw account</p>
                </div>

                <form id="loginForm" class="space-y-6" method="post">
                    <div class="form-group">
                        <label for="loginEmail" class="block text-gray-700 font-semibold mb-2">Email Address</label>
                        <div class="relative">
                            <input type="email" id="loginEmail" name="email" class="w-full px-4 py-3 pl-12 border-2 border-gray-300 rounded-lg focus:border-amber-500 focus:ring-2 focus:ring-amber-200 transition-all duration-300 bg-gray-50 hover:bg-white input-focus-effect" placeholder="Enter your email" required>
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-envelope text-gray-400"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="loginPassword" class="block text-gray-700 font-semibold mb-2">Password</label>
                        <div class="relative">
                            <input type="password" id="loginPassword" name="password" class="w-full px-4 py-3 pl-12 border-2 border-gray-300 rounded-lg focus:border-amber-500 focus:ring-2 focus:ring-amber-200 transition-all duration-300 bg-gray-50 hover:bg-white input-focus-effect" placeholder="Enter your password" required>
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock text-gray-400"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input type="checkbox" id="rememberMe" name="rememberMe" class="w-4 h-4 text-amber-600 rounded focus:ring-amber-500">
                            <label for="rememberMe" class="ml-2 text-gray-700 text-sm">Remember me</label>
                        </div>
                        <a asp-controller="Account" asp-action="ForgotPassword" class="text-sm text-amber-600 hover:text-amber-700 font-medium transition-colors duration-300">Forgot Password?</a>
                    </div>
                    
                    <button type="submit" class="w-full bg-gradient-to-r from-amber-500 to-amber-600 hover:from-amber-600 hover:to-amber-700 text-white font-bold py-3 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg btn-glow flex items-center justify-center">
                        <i class="fas fa-sign-in-alt mr-2"></i> Log In
                    </button>
                </form>

                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">Or continue with</span>
                    </div>
                </div>

                <div class="flex justify-center gap-4 mb-6">
                    <button type="button" class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center text-gray-600 hover:bg-amber-500 hover:text-white transition-all duration-300 hover-lift">
                        <i class="fab fa-google"></i>
                    </button>
                    <button type="button" class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center text-gray-600 hover:bg-blue-600 hover:text-white transition-all duration-300 hover-lift">
                        <i class="fab fa-facebook-f"></i>
                    </button>
                    <button type="button" class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center text-gray-600 hover:bg-blue-400 hover:text-white transition-all duration-300 hover-lift">
                        <i class="fab fa-twitter"></i>
                    </button>
                </div>

                <div class="text-center text-gray-600">
                    Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-amber-600 hover:text-amber-700 font-semibold transition-colors duration-300">Sign up here</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Login.js" asp-append-version="true"></script>
    
    <script>
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Simulate login process
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            
            if (email && password) {
                // For demo purposes, we'll just log the user in
                if (window.authManager) {
                    window.authManager.login();
                }
            }
        });
    </script>
}