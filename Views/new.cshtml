@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-background text-white py-32 relative">
    <div class="absolute inset-0 bg-black/40"></div>
    <div class="container mx-auto px-4 text-center relative z-10">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-gradient-to-r from-amber-400 to-amber-200 bg-clip-text text-transparent hero-text-hover">
                Helping Pets Find Their Forever Homes
            </h1>
            <p class="text-xl md:text-2xl mb-8 text-amber-100">
                ResQPaw connects rescue pets with loving families and provides resources for pet care and emergency services across Bangladesh.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a asp-controller="Pets" asp-action="Index" class="px-8 py-4 bg-amber-600 hover:bg-amber-700 text-white font-bold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg btn-glow">
                    Find a Pet
                </a>
                <a asp-controller="LostFound" asp-action="Index" class="px-8 py-4 border-2 border-white text-white hover:bg-white hover:text-amber-600 font-bold rounded-lg transition-all duration-300 transform hover:scale-105">
                    Report Lost Pet
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-20 relative z-10 section-bg-1 bg-transition" id="features-section">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16 section-title-hidden" id="features-title">
            <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">How ResQPaw Helps</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">We provide comprehensive services for pet rescue, care, and adoption with a dedicated network of professionals and volunteers across Bangladesh.</p>
            <div class="w-24 h-1 bg-amber-500 mx-auto mt-6 rounded-full"></div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Feature Card 1 -->
            <div class="gradient-border rounded-2xl overflow-hidden card-hover bg-white group card-hidden" data-card="1">
                <div class="h-48 overflow-hidden relative">
                    <img src="https://images.unsplash.com/photo-1583337130417-3346a1be7dee?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         alt="Pet Adoption" class="w-full h-full object-cover image-hover">
                    <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
                </div>
                <div class="p-6 content-hover">
                    <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-amber-200 transition-colors duration-300">
                        <i class="fas fa-home text-amber-600 text-xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-3">Pet Adoption</h3>
                    <p class="text-gray-600 mb-4">Find your perfect companion from our network of shelters across Dhaka, Chittagong, and Sylhet. Local breeds and rescued pets available.</p>
                    <a asp-controller="Pets" asp-action="Index" class="text-amber-600 font-semibold hover:text-amber-700 transition-colors duration-300 flex items-center group-hover:translate-x-2 transition-transform">
                        Learn More <i class="fas fa-arrow-right ml-2"></i>
                    </a>
                </div>
            </div>

            <!-- Feature Card 2 -->
            <div class="gradient-border rounded-2xl overflow-hidden card-hover bg-white group card-hidden" data-card="2">
                <div class="h-48 overflow-hidden relative">
                    <img src="https://images.unsplash.com/photo-1552053831-71594a27632d?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         alt="Lost & Found" class="w-full h-full object-cover image-hover">
                    <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
                </div>
                <div class="p-6 content-hover">
                    <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-amber-200 transition-colors duration-300">
                        <i class="fas fa-search text-amber-600 text-xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-3">Lost & Found</h3>
                    <p class="text-gray-600 mb-4">Our community network helps reunite lost pets with their families across all major cities in Bangladesh with real-time alerts.</p>
                    <a asp-controller="LostFound" asp-action="Index" class="text-amber-600 font-semibold hover:text-amber-700 transition-colors duration-300 flex items-center group-hover:translate-x-2 transition-transform">
                        Learn More <i class="fas fa-arrow-right ml-2"></i>
                    </a>
                </div>
            </div>

            <!-- Feature Card 3 -->
            <div class="gradient-border rounded-2xl overflow-hidden card-hover bg-white group card-hidden" data-card="3">
                <div class="h-48 overflow-hidden relative">
                    <img src="https://images.unsplash.com/photo-1622279457486-62dcc4a4310c?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         alt="Veterinary Care" class="w-full h-full object-cover image-hover">
                    <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
                </div>
                <div class="p-6 content-hover">
                    <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-amber-200 transition-colors duration-300">
                        <i class="fas fa-stethoscope text-amber-600 text-xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-3">Veterinary Care</h3>
                    <p class="text-gray-600 mb-4">Partnered with certified veterinarians across Bangladesh providing affordable care for your pets with emergency services available.</p>
                    <a asp-controller="Vets" asp-action="Index" class="text-amber-600 font-semibold hover:text-amber-700 transition-colors duration-300 flex items-center group-hover:translate-x-2 transition-transform">
                        Learn More <i class="fas fa-arrow-right ml-2"></i>
                    </a>
                </div>
            </div>

            <!-- Feature Card 4 -->
            <div class="gradient-border rounded-2xl overflow-hidden card-hover bg-white group card-hidden" data-card="4">
                <div class="h-48 overflow-hidden relative">
                    <img src="https://images.unsplash.com/photo-1544568100-847a948585b9?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         alt="Emergency Rescue" class="w-full h-full object-cover image-hover">
                    <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
                </div>
                <div class="p-6 content-hover">
                    <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-amber-200 transition-colors duration-300">
                        <i class="fas fa-ambulance text-amber-600 text-xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-3">Emergency Rescue</h3>
                    <p class="text-gray-600 mb-4">24/7 emergency response team ready to rescue injured or distressed animals across Bangladesh with immediate medical attention.</p>
                    <a href="#" class="text-amber-600 font-semibold hover:text-amber-700 transition-colors duration-300 flex items-center group-hover:translate-x-2 transition-transform">
                        Learn More <i class="fas fa-arrow-right ml-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Pets Section -->
<section class="py-20 relative z-10 section-bg-2 bg-transition" id="pets-section">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16 section-title-hidden" id="pets-title">
            <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">Pets Looking for Homes in Bangladesh</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">These adorable local pets are waiting to meet their forever families and start a new chapter in their lives.</p>
            <div class="w-24 h-1 bg-amber-500 mx-auto mt-6 rounded-full"></div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Pet Card 1 - Bangladeshi Dog -->
            <div class="gradient-border rounded-2xl overflow-hidden card-hover bg-white group card-hidden" data-card="5">
                <div class="h-64 overflow-hidden relative">
                    <img src="https://images.unsplash.com/photo-1552053831-71594a27632d?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         alt="Tiger" class="w-full h-full object-cover image-hover">
                    <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
                </div>
                <div class="p-6 content-hover">
                    <h3 class="text-xl font-bold text-gray-800 mb-2">Tiger</h3>
                    <p class="text-gray-600 mb-4">Local Deshi Kutta from Dhaka. Very loyal and protective. Great for families and good with children. Rescued from streets of Mirpur.</p>
                    <div class="flex flex-wrap gap-2">
                        <span class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-sm group-hover:bg-amber-200 transition-colors">2 years</span>
                        <span class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-sm group-hover:bg-amber-200 transition-colors">Male</span>
                        <span class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-sm group-hover:bg-amber-200 transition-colors">Medium</span>
                    </div>
                </div>
            </div>

            <!-- Pet Card 2 - Bangladeshi Cat -->
            <div class="gradient-border rounded-2xl overflow-hidden card-hover bg-white group card-hidden" data-card="6">
                <div class="h-64 overflow-hidden relative">
                    <img src="https://images.unsplash.com/photo-1592194996308-7b43878e84a6?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         alt="Maya" class="w-full h-full object-cover image-hover">
                    <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
                </div>
                <div class="p-6 content-hover">
                    <h3 class="text-xl font-bold text-gray-800 mb-2">Maya</h3>
                    <p class="text-gray-600 mb-4">Beautiful local Biral from Chittagong. Very affectionate and loves attention. Good with other pets and children.</p>
                    <div class="flex flex-wrap gap-2">
                        <span class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-sm group-hover:bg-amber-200 transition-colors">1.5 years</span>
                        <span class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-sm group-hover:bg-amber-200 transition-colors">Female</span>
                        <span class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-sm group-hover:bg-amber-200 transition-colors">Small</span>
                    </div>
                </div>
            </div>

            <!-- Pet Card 3 - Bangladeshi Puppy -->
            <div class="gradient-border rounded-2xl overflow-hidden card-hover bg-white group card-hidden" data-card="7">
                <div class="h-64 overflow-hidden relative">
                    <img src="https://images.unsplash.com/photo-1601979031925-424e53b6caaa?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         alt="Chiku" class="w-full h-full object-cover image-hover">
                    <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
                </div>
                <div class="p-6 content-hover">
                    <h3 class="text-xl font-bold text-gray-800 mb-2">Chiku</h3>
                    <p class="text-gray-600 mb-4">Playful mixed breed puppy from Sylhet. Very energetic and curious. Loves playing and learning new tricks. Vaccinated.</p>
                    <div class="flex flex-wrap gap-2">
                        <span class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-sm group-hover:bg-amber-200 transition-colors">6 months</span>
                        <span class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-sm group-hover:bg-amber-200 transition-colors">Male</span>
                        <span class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-sm group-hover:bg-amber-200 transition-colors">Small</span>
                    </div>
                </div>
            </div>

            <!-- Pet Card 4 - Bangladeshi Kitten -->
            <div class="gradient-border rounded-2xl overflow-hidden card-hover bg-white group card-hidden" data-card="8">
                <div class="h-64 overflow-hidden relative">
                    <img src="https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         alt="Rani" class="w-full h-full object-cover image-hover">
                    <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
                </div>
                <div class="p-6 content-hover">
                    <h3 class="text-xl font-bold text-gray-800 mb-2">Rani</h3>
                    <p class="text-gray-600 mb-4">Sweet local kitten from Rajshahi. Very calm and gentle. Loves cuddles and quiet environments. Litter trained.</p>
                    <div class="flex flex-wrap gap-2">
                        <span class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-sm group-hover:bg-amber-200 transition-colors">8 months</span>
                        <span class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-sm group-hover:bg-amber-200 transition-colors">Female</span>
                        <span class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-sm group-hover:bg-amber-200 transition-colors">Small</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-12">
            <a asp-controller="Pets" asp-action="Index" class="px-8 py-4 bg-amber-600 hover:bg-amber-700 text-white font-bold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg btn-glow">
                View All Bangladeshi Pets
            </a>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-20 relative z-10 section-bg-3 bg-transition text-white cta-section-hover" id="cta-section">
    <div class="container mx-auto px-4 text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">Make a Difference in Bangladesh</h2>
        <p class="text-xl mb-8 max-w-3xl mx-auto">
            Whether you're looking to adopt, foster, volunteer, or donate, your support helps save lives and create happy endings for pets in need across Bangladesh.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a asp-controller="Account" asp-action="Register" class="px-8 py-4 bg-white text-amber-600 hover:bg-amber-50 font-bold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
                Get Involved
            </a>
            <a href="#" class="px-8 py-4 border-2 border-white text-white hover:bg-white hover:text-amber-600 font-bold rounded-lg transition-all duration-300 transform hover:scale-105">
                Donate Now
            </a>
        </div>
    </div>
</section>

