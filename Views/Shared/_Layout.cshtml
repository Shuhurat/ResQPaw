@using Microsoft.AspNetCore.Identity
@inject SignInManager<ResQPaw.Models.ApplicationUser> SignInManager
@inject UserManager<ResQPaw.Models.ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResQPaw</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome & Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Header / Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/images/ResQPawLogo.png" alt="ResQPaw Logo" width="50" /> ResQPaw
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Pets" asp-action="Index">Find Pets</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="LostFound" asp-action="Index">Lost & Found</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Vets" asp-action="Index">Veterinarians</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Resources" asp-action="Index">Resources</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About Us</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="SOS" asp-action="Send">SOS Alert</a></li>
                    </ul>

                    <!-- Role-based dashboard -->
                    <ul class="navbar-nav ms-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a></li>
                            }
                            else if (User.IsInRole("ServiceProvider"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Vet" asp-action="Dashboard">Service Dashboard</a></li>
                            }
                            else if (User.IsInRole("Customer"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="Dashboard">My Dashboard</a></li>
                            }
                        }

                        <!-- Vet Notification -->
                        <li class="nav-item dropdown" id="vetNotificationArea" style="display:none;">
                            <a class="nav-link position-relative" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-bell-fill fs-4"></i>
                                <span id="notificationCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">0</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end p-2" aria-labelledby="notificationDropdown" id="notificationList">
                                <li class="text-center text-muted">No new SOS alerts</li>
                            </ul>
                        </li>

                        <!-- Auth buttons -->
                        <li class="nav-item">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <span class="navbar-text mx-2">Hello, @User.Identity.Name!</span>
                                <form method="post" asp-area="Identity" asp-page="/Account/Login" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Logout</button>
                                </form>
                            }
                            else
                            {
                                <a class="btn btn-primary btn-sm mx-1" asp-area="Identity" asp-page="/Account/Login">Login</a>
                                <a class="btn btn-outline-light btn-sm mx-1" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- Toast container -->
    <div id="toastContainer" style="position: fixed; top: 1rem; right: 1rem; z-index: 3000;"></div>

    <!-- Footer -->
    <footer class="bg-light py-4 mt-auto">
        <div class="container text-center">
            <p>&copy; @DateTime.Now.Year ResQPaw. All rights reserved.</p>
        </div>
    </footer>

    <!-- Scripts (single SignalR include, handlers registered before start) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

    <script>
        const isVet = '@User.IsInRole("ServiceProvider")';
        if (isVet === 'True') {
            const notificationArea = document.getElementById("vetNotificationArea");
            if (notificationArea) notificationArea.style.display = "block";

            // build connection
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/sosHub")
                .withAutomaticReconnect()
                .build();

            // register handler BEFORE connection start
            let notificationCount = 0;
            connection.on("ReceiveSOS", (customerName, address, message) => {
                console.log("SOS received:", customerName, address, message);

                // Update badge
                notificationCount++;
                const badge = document.getElementById("notificationCount");
                if (badge) badge.innerText = notificationCount;

                // Add to dropdown list
                const list = document.getElementById("notificationList");
                if (list) {
                    if (list.children.length === 1 && list.children[0].classList.contains("text-muted")) {
                        list.innerHTML = "";
                    }
                    const newItem = document.createElement("li");
                    newItem.classList.add("dropdown-item");
                    newItem.innerHTML = `<strong>🚨 ${customerName}</strong><br>${address}<br>${message}`;
                    list.prepend(newItem);
                }

                // toast
                const toast = document.createElement("div");
                toast.className = "toast align-items-center text-bg-danger border-0 position-fixed top-0 end-0 m-3";
                toast.style.zIndex = "2000";
                toast.innerHTML = `
                    <div class="d-flex">
                        <div class="toast-body">
                            🚨 <b>${customerName}</b> sent an SOS!<br>${address}: ${message}
                        </div>
                    </div>
                `;
                document.body.appendChild(toast);
                const bsToast = new bootstrap.Toast(toast, { delay: 4000 });
                bsToast.show();
                setTimeout(() => toast.remove(), 5000);
            });

            // start and join group
            connection.start()
                .then(() => {
                    console.log("Connected to SOSHub");
                    return connection.invoke("JoinVetGroup");
                })
                .then(() => console.log("Joined Vets group"))
                .catch(err => console.error("SignalR error:", err));
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>