@{
    Layout = null;
    var title = ViewData["Title"] ?? "ResQPaw";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - ResQPaw</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <img src="~/images/ResQPawLogo.png" alt="ResQPaw Logo" />
                    <h1>ResQPaw</h1>
                </div>
                <nav>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Pets" asp-action="Index">Find Pets</a></li>
                        <li><a asp-controller="LostFound" asp-action="Index">Lost & Found</a></li>
                        <li><a asp-controller="Vets" asp-action="Index">Veterinarians</a></li>
                        <li><a asp-controller="Resources" asp-action="Index">Resources</a></li>
                        <li><a asp-controller="Home" asp-action="About">About Us</a></li>
                    </ul>
                </nav>
                <div class="auth-buttons">
                <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Login</a>     <!--login link!!!!!!-->

                 <!--   <a asp-controller="Account" asp-action="Login" class="btn btn-outline">Log In</a> -->

                  <!--  <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Sign Up</a> -->
                
                   <a  asp-area="Identity" asp-page="/Account/Register">Register</a>
                </div>
            </div>
        </div>
    </header>

    <!-- Page Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-column">
                    <h3>About ResQPaw</h3>
                    <p>ResQPaw is a non-profit organization dedicated to rescuing, rehabilitating, and rehoming pets in need.</p>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="footer-column">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Pets" asp-action="Index">Adopt a Pet</a></li>
                        <li><a asp-controller="LostFound" asp-action="Index">Lost & Found</a></li>
                        <li><a asp-controller="Vets" asp-action="Index">Find a Vet</a></li>
                        <li><a asp-controller="Resources" asp-action="Index">Resources</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>Contact Us</h3>
                    <p><i class="fas fa-map-marker-alt"></i> 123 Pet Rescue Ave, City, State</p>
                    <p><i class="fas fa-phone"></i> (555) 123-4567</p>
                    <p><i class="fas fa-envelope"></i> info@resqpaw.org</p>
                </div>
                <div class="footer-column">
                    <h3>Newsletter</h3>
                    <form>
                        <input type="email" placeholder="Your Email" class="form-control mb-2" />
                        <button type="submit" class="btn btn-primary w-100">Subscribe</button>
                    </form>
                </div>
            </div>
            <div class="copyright">
                <p>&copy; @DateTime.Now.Year ResQPaw. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
