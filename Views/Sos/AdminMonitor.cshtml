@model List<ResQPaw.Models.AdminSOSViewModel>

<h2>Admin SOS Monitor</h2>
<table class="table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Address</th>
            <th>Message</th>
            <th>Status</th>
            <th>Assigned Vet</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var sos in Model)
{
    <tr>
        <td>@sos.CustomerName</td>
        <td>@sos.Address</td>
        <td>@sos.Message</td>
        <td>@sos.Status</td>
        <td>
            <form method="post" asp-action="DeleteSOS" asp-controller="Admin">
                <input type="hidden" name="id" value="@sos.Id" />
                <button class="btn btn-danger btn-sm">Delete</button>
            </form>
        </td>
    </tr>
}

    </tbody>
</table>

